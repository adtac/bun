{
  "type": "module",
  "name": "bun-polyfills",
  "module": "src/index.ts",
  "devDependencies": {
    "@types/emscripten": "^1.39.7",
    "@types/murmurhash3js-revisited": "^3.0.1",
    "@types/node": "^20.4.5",
    "@types/which": "^3.0.0",
    "bun-types": "^0.7.0",
    "copyfiles": "^2.4.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "repl": "node --import ./dist/src/repl.js",
    "clean": "rm -rf dist",
    "build": "bun run clean && bunx tsc && bunx copyfiles \"./**/*.wasm\" dist",
    "build/wasm": "bun run build/farmhash && bun run build/zighash",
    "build/farmhash": "cd lib/farmhash && bun run build && cd ../..",
    "build/zighash": "cd lib/zighash && bun run build && cd ../.."
  },
  "dependencies": {
    "@foxglove/crc": "^0.0.3",
    "adler-32": "^1.3.1",
    "js-md4": "^0.3.2",
    "murmurhash3js-revisited": "^3.0.0",
    "open-editor": "^4.0.0",
    "supports-color": "^9.4.0",
    "which": "^3.0.1"
  }
}
